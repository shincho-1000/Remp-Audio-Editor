<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/PopupCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/header_choose_color"
                style="@style/PopupHeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/choose_accent_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_blue_btn"
                    app:uncheckedColor="@color/blue_primary_color_350"
                    style="@style/ColorButtonStyle" />

                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_red_btn"
                    app:uncheckedColor="@color/red_primary_color_400"
                    style="@style/ColorButtonStyle" />

                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_green_btn"
                    app:uncheckedColor="@color/green_primary_color_500"
                    style="@style/ColorButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">
                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_pink_btn"
                    app:uncheckedColor="@color/pink_primary_color_400"
                    style="@style/ColorButtonStyle" />

                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_cyan_btn"
                    app:uncheckedColor="@color/cyan_primary_color_300"
                    style="@style/ColorButtonStyle" />

                <com.project.rempaudioeditor.customviews.ColorSelectionButton
                    android:id="@+id/accent_color_yellow_btn"
                    app:uncheckedColor="@color/yellow_primary_color_300"
                    style="@style/ColorButtonStyle" />
            </LinearLayout>

            <TextView
                android:id="@+id/accent_color_wallpaper_btn"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:clickable="true"
                android:textColor="?colorOnPrimary"
                android:gravity="center"
                android:background="@drawable/background_color_control_wallpaper"
                android:layout_marginBottom="10dp"
                android:text="@string/pick_from_wallpaper" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>