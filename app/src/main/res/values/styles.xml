<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Radio buttons -->
    <style name="RadioButtonStyle">
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- White popup card -->
    <style name="PopupCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">20dp</item>
        <item name="useCompatPadding">true</item>
    </style>

    <!-- Header -->
    <style name="HeaderStyle">
        <item name="android:background">@drawable/background_header</item>
        <item name="android:elevation">16dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_width">403dp</item>
    </style>
</resources>