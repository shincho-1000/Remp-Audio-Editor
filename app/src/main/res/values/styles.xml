<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Radio buttons -->
    <style name="RadioButtonStyle">
        <item name="android:buttonTint">@drawable/selector_radio_btn</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Popup card -->
    <style name="PopupCardStyle">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/popupCornerRadius</item>
    </style>

    <style name="PopupHeaderTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PopupButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/textFillColor</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <!-- Header -->
    <style name="HeaderStyle">
        <item name="android:background">@drawable/background_header</item>
        <item name="android:elevation">16dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_width">403dp</item>
    </style>

    <!-- Divider -->
    <style name="DividerStyle">
        <item name="android:background">?attr/dividerColor</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>