<resources>
    <!-- Base application theme -->
    <style name="Theme.RempAudioEditor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/primary_color_400</item>
        <item name="colorPrimaryVariant">@color/primary_color_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_color_400</item>
        <item name="colorSecondaryVariant">@color/secondary_color_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="errorColor">@color/dark_error</item>

        <!-- Basic ui elements -->
        <item name="headerColor">@color/lighter_grey</item>
        <item name="editorTrayColor">@color/light_grey</item>
        <item name="visualizerBackgroundColor">@color/light_grey</item>
        <item name="settingsItemColor">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="textFillColor">@color/white</item>
        <item name="dividerColor">@color/pale_white</item>
        <item name="imageIconColor">@color/icon_white</item>
        <item name="controlColor">@color/pale_white</item>
        <item name="seekbarSelectedBorderColor">@color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Visualizer Colors -->
        <item name="recorderVisualizerBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_grey</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.RempAudioEditor</item>
    </style>
</resources>