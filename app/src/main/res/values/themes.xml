<resources>
    <!-- Base application theme -->
    <style name="Theme.RempAudioEditor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/primary_color_400</item>
        <item name="colorPrimaryVariant">@color/primary_color_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_color_400</item>
        <item name="colorSecondaryVariant">@color/secondary_color_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="errorColor">@color/light_error</item>

        <!-- Basic ui elements -->
        <item name="headerColor">@color/white</item>
        <item name="editorTrayColor">@color/white</item>
        <item name="visualizerBackgroundColor">@color/pale_white</item>
        <item name="settingsItemColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="textFillColor">@color/black</item>
        <item name="dividerColor">@color/dark_grey</item>
        <item name="imageIconColor">@color/icon_black</item>
        <item name="controlColor">@color/pale_white</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Visualizer Colors -->
        <item name="recorderVisualizerBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButtonStyle</item>
        <item name="dialogCornerRadius">@dimen/popupCornerRadius</item>
    </style>

    <style name="DialogPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/textFillColor</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialogNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/errorColor</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.RempAudioEditor</item>
    </style>
</resources>